{% extends 'security/base_user.html.twig' %}

{% block title %}
    SteVee | Wachtwoord herstel aanvragen
{% endblock %}

{% block header %}
    Wachtwoord herstel aanvragen
{% endblock %}

{% block content %}
<div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

        <form class="col s12 fos_user_resetting_request" action="{{ path('fos_user_resetting_send_email') }}" method="post">
            <div class='row'>
                <div class='col s12'>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type='email' name='username' id='username' value="{{ last_username }}" required/>
                    <label for='email' class="left-align">Gebruikersnaam</label>
                </div>
            </div>

            <br />
            <center>
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect' value="{{ 'resetting.request.submit'|trans }}">Verstuur</button>
                </div>
            </center>
        </form>
    </div>
    <div class='row'>
        <div class="col s12">
            <a href="{{ url('base') }}" style="display:inline-block;"><i class="material-icons left">keyboard_arrow_left</i>Terug naar SteeVee</a>
        </div>
    </div>
</div>
{% endblock %}