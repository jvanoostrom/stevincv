<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SteVee | Admin Panel{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.css') }}" media="screen,projection"/>
            <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize-tags.css') }}" media="screen,projection"/>
            <link type="text/css" rel="stylesheet" href="{{ asset('css/custom.css') }}" media="screen,projection"/>
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>

    <body>
    <header>
        <nav class="top-nav">

                <div class="nav-wrapper">
                    <a href="#" class="brand-logo hide-on-med-and-up"><img src="{{ asset('img/logostevin.png') }}" height="60px"></a>
                    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>

                    <ul class="right">
                        <li><a class="dropdown-button" data-beloworigin="true" href="#!" data-activates="dropdown-top"><div id="perm-identity"> </div></a></li>
                    </ul>
                    <ul id="dropdown-top" class="dropdown-content">
                        <li><a href="{{ url('base') }}"><i class="material-icons">keyboard_arrow_left</i> Terug naar SteVee</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ url('change_password') }}"><i class="material-icons">fingerprint</i> Wachtwoord wijzigen</a></li>
                        <li><a href="{{ url('user_logout') }}"><i class="material-icons">exit_to_app</i> Uitloggen</a></li>
                    </ul>

                    <ul class="side-nav fixed black-text" id="nav-mobile">
                        <li>
                            <div class="logo" style="height:100px">
                                <img src="{{ asset('img/logostevin_new.png') }}">
                            </div>
                        </li>
                        <li><a href="{{ url('admin_user') }}"><i class="material-icons">person_pin</i><span class="menu-admin">Consultants</span></a></li>
                        <li><a href="{{ url('admin_tag') }}"><i class="material-icons">label_outline</i><span class="menu-admin">Tags</span></a></li>
                        <li><a href="{{ url('admin_stats') }}"><i class="material-icons">show_chart</i><span class="menu-admin">Statistieken</span></a></li>
                        <li><a href="{{ url('admin_ratecard') }}"><i class="material-icons">euro_symbol</i><span class="menu-admin">Ratecard</span></a></li>
                        {#<li><a href="#!"><i class="material-icons">supervisor_account</i><span class="menu-admin">Klanten</span></a></li>#}

                    </ul>

                </div>
        </nav>
    </header>
    <main>
        <div class="row">
            <div class="col s12">
                {% block content %}{% endblock %}
            </div>
        </div>
    </main>
        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
            <script src="{{ asset('js/typeahead.js') }}"></script>
            <script src="{{ asset('js/materialize-tags.js') }}"></script>
            <script src="{{ asset('js/init.js') }}"></script>
        {% endblock %}
    </body>
</html>