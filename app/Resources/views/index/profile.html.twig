{% extends 'base.html.twig' %}

{% block content %}
    {% if isUser %}
        <div class="row">
            <div class="col s12">
                <a href="{{ url('profile_add',{'userId' : userId}) }}" class="valign-wrapper"><i class="material-icons valign">add</i>Voeg een profiel toe</a>
            </div>
        </div>
    {% endif %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div id="card-alert" class="card green succes-entity" style="display:none">
            <div class="card-content white-text valign-wrapper">
                <i class="material-icons valign">done</i>&nbsp;<span>{{ flash_message }}</span>
            </div>
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('error') %}
        <div id="card-alert" class="card red succes-entity" style="display:none">
            <div class="card-content white-text valign-wrapper">
                <i class="material-icons valign">warning</i>&nbsp;<span>{{ flash_message }}</span>
            </div>
        </div>
    {% endfor %}

    {% if profiles %}
    <table class="highlight responsive-table">
        <thead>
        <tr>
            <th data-field="id" width="65"></th>
            <th data-field="shortDescription">Beschrijving</th>
            <th data-field="tags" width="450">Tags</th>
            <th data-field="updatedAt" width="150">Bijgewerkt</th>
        </tr>
        </thead>

        <tbody>
    {% for profile in profiles %}
        <tr>
            <td>
                {% if isUser %}
                    <a href="{{ url('profile_edit',{'userId' : userId, 'profileId' : profile.Id}) }}" alt="Bewerken">
                        <i class="material-icons">edit</i>
                    </a>
                    <a href="#" class="delete-button-{{ profile.id }}" alt="Verwijderen">
                        <i class="material-icons">delete</i>
                    </a>
                {% else %}
                    <a href="{{ url('profile_show',{'userId' : userId, 'profileId' : profile.Id}) }}" alt="Bewerken">
                        <i class="material-icons">visibility</i>
                    </a>
                {% endif %}
            </td>
            <td>{{ profile.shortDescription }}</td>
            <td id="tags">{% for tag in profile.tags %}
                    <div class="chip">{{ tag.tagText }}</div>
                {% endfor %}
            </td>
            <td>{{ profile.updatedAt|date('d-m-Y H:i:s') }}</td>
        </tr>
            <div id="card-alert" class="card red delete-entity-{{ profile.id }}" style="display:none">
                <div class="card-content white-text valign-wrapper">
                    <i class="material-icons valign">warning</i>&nbsp;
                    <span>Weet je zeker dat je {{ profile.shortDescription }} wilt verwijderen?
                        <strong><a class="white-text" href="{{ url('profile_delete',{'userId' : userId, 'profileId' : profile.id}) }}">Ja, verwijder.</a></strong>
                    </span>
                </div>
            </div>
    {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="row">
            <div class="col s12"><h3>Geen profielen gevonden.</h3></div>
        </div>
    {% endif %}
{% endblock %}