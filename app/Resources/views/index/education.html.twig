{% extends 'base.html.twig' %}

{% block content %}
    {% set isUser = false %}
    {% if app.user.id == userId %}
        {% set isUser = true %}
    {% endif %}
    {% if isUser %}
        <div class="row">
            <div class="col s12">
                <a href="{{ url('edu_add',{'userId' : userId}) }}" class="valign-wrapper"><i class="material-icons valign">add</i>Voeg een opleiding toe</a>
            </div>
        </div>
    {% endif %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div id="card-alert" class="card green succes-entity" style="display:none">
            <div class="card-content white-text valign-wrapper">
                <i class="material-icons valign">done</i>&nbsp;<span>{{ flash_message }}</span>
            </div>
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('error') %}
        <div id="card-alert" class="card red succes-entity" style="display:none">
            <div class="card-content white-text valign-wrapper">
                <i class="material-icons valign">warning</i>&nbsp;<span>{{ flash_message }}</span>
            </div>
        </div>
    {% endfor %}

    {% if education %}
    <table class="highlight responsive-table">
        <thead>
        <tr>
            <th data-field="id" width="65"></th>
            <th data-field="educationName">Opleiding</th>
            <th data-field="educationInstitute" width="450">Instituut</th>
            <th data-field="updatedAt" width="150">Bijgewerkt</th>
        </tr>
        </thead>

        <tbody>
    {% for edu in education %}
        <tr>
            <td>
                {% if isUser %}
                    <a href="{{ url('edu_edit',{'userId' : userId, 'educationId' : edu.Id}) }}" alt="Bewerken">
                        <i class="material-icons">edit</i>
                    </a>
                    <a href="#" class="delete-button" alt="Verwijderen">
                        <i class="material-icons">delete</i>
                    </a>
                {% else %}
                    <a href="{{ url('edu_show',{'userId' : userId, 'educationId' : edu.Id}) }}" alt="Bewerken">
                        <i class="material-icons">visibility</i>
                    </a>
                {% endif %}
            </td>
            <td>{{ edu.educationName }}</td>
            <td>{{ edu.educationInstitute }}</td>
            <td>{{ edu.updatedAt|date('d-m-Y H:i:s') }}</td>
        </tr>
        {% for flash_message in app.session.flashBag.get('delete') %}
            <div id="card-alert" class="card red delete-entity" style="display:none">
                <div class="card-content white-text valign-wrapper">
                    <i class="material-icons valign">warning</i>&nbsp;
                    <span>{{ flash_message }}
                        <strong><a class="white-text" href="{{ url('edu_delete',{'userId' : userId, 'educationId' : edu.Id}) }}">Ja, verwijder.</a></strong>
                    </span>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="row">
            <div class="col s12"><h3>Geen opleidingen gevonden.</h3></div>
        </div>
    {% endif %}
{% endblock %}