{% form_theme form 'form/materialize_layout.html.twig' %}
{% extends 'base_admin.html.twig' %}

{% block content %}

    <div class="row">
        <form class="col s12" method="POST" enctype="multipart/form-data">

            {% for flash_message in app.session.flashBag.get('notice') %}
                <div id="card-alert" class="card green" style="display:none">
                    <div class="card-content white-text valign-wrapper">
                        <i class="material-icons valign">done</i>&nbsp;<span>{{ flash_message }}</span>
                    </div>
                </div>
            {% endfor %}

            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_label(form.username, 'Gebruikersnaam') }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, {'attr': {
                            'class': 'validate',
                            'maxlength': 100,
                        }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_label(form.firstName, 'Voornaam') }}
                        {{ form_errors(form.firstName) }}
                        {{ form_widget(form.firstName, {'attr': {
                            'class': 'validate',
                            'maxlength': 100,
                        }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_label(form.lastName, 'Achternaam') }}
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.lastName, {'attr': {
                            'class': 'validate',
                            'maxlength': 100,
                        }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_errors(form.roles) }}
                        {{ form_widget(form.roles) }}
                        {{ form_label(form.roles, 'Rol') }}
                    </div>
                </div>
                <div class="row right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn waves-effect waves-light'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>

{% endblock %}