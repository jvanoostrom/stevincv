{% form_theme form 'form/materialize_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <form class="col s12" method="POST" enctype="multipart/form-data">

            {% for flash_message in app.session.flashBag.get('notice') %}
                <div id="card-alert" class="card green" style="display:none">
                    <div class="card-content white-text valign-wrapper">
                        <i class="material-icons valign">done</i>&nbsp;<span>{{ flash_message }}</span>
                    </div>
                </div>
            {% endfor %}

            <div class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        {{ form_label(form.skillText, 'Competentie') }}
                        {{ form_errors(form.skillText) }}
                        {{ form_widget(form.skillText, {'attr': {
                            'class': 'validate',
                            'maxlength': 10,
                        }}) }}
                    </div>
                    <div class="col s6 range-field">
                        {{ form_label(form.skillWeight, 'Score') }}
                        {{ form_errors(form.skillWeight) }}
                        {{ form_widget(form.skillWeight, {'attr': {
                            'class': 'range',
                            'min': 0,
                            'max': 10,
                        }}) }}
                    </div>
                </div>
                <div class="row right">
                    {{ form_widget(form.submit, {'attr': {
                        'class': 'btn waves-effect waves-light',
                    }}) }}
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>

{% endblock %}