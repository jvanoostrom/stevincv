{% form_theme form 'form/materialize_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <form class="col s12" method="POST" enctype="multipart/form-data">

            {% for flash_message in app.session.flashBag.get('notice') %}
                <div id="card-alert" class="card green" style="display:none">
                    <div class="card-content white-text valign-wrapper">
                        <i class="material-icons valign">done</i>&nbsp;<span>{{ flash_message }}</span>
                    </div>
                </div>
            {% endfor %}

            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_label(form.publicationTitle, 'Titel') }}
                        {{ form_errors(form.publicationTitle) }}
                        {{ form_widget(form.publicationTitle, {'attr': {
                            'class': 'validate',
                            'maxlength': 100,
                        }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="datepicker-field col s12 m2">
                        {{ form_label(form.publishedDate, 'Publicatiedatum') }}
                        {{ form_errors(form.publishedDate) }}
                        {{ form_widget(form.publishedDate, {'attr': {
                            'class': 'datepicker',
                        }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_label(form.publicationJournal, 'Medium') }}
                        {{ form_errors(form.publicationJournal) }}
                        {{ form_widget(form.publicationJournal, {'attr': {
                            'class': 'validate',
                            'maxlength': 100,
                        }}) }}
                    </div>
                </div>
                <div class="row right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn waves-effect waves-light'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>

{% endblock %}