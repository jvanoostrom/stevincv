{% extends 'security/base_user.html.twig' %}

{% block title %}
    SteVee | Login
{% endblock %}

{% block header %}
    Login
{% endblock %}

{% block content %}
<div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

        <form class="col s12" action="{{ path('login') }}" method="post">
            <div class='row'>
                <div class='col s12'>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type='email' name='_username' id='username' value="{{ last_username }}"/>
                    <label for='email' class="left-align">Gebruikersnaam</label>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type='password' name='_password' id='password' />
                    <label for='password' class="left-align">Wachtwoord</label>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
            </div>

            <div class="row right">
                <label>
                    <a href='{{ path('fos_user_resetting_request') }}'><b>Wachtwoord vergeten?</b></a>
                </label>
            </div>

            <br />
            <center>
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect'>Login</button>
                </div>
            </center>
        </form>
    </div>
</div>
{% endblock %}