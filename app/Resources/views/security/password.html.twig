{% extends 'security/base_user.html.twig' %}

{% block title %}
    SteeVee | Wachtwoord wijzigen
{% endblock %}

{% block header %}
    Wachtwoord wijzigen
{% endblock %}

{% block content %}
    <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

            <form class="col s12" action="{{ path('change_password') }}" method="post">
                <div class='row'>
                    <div class='col s12'>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='email' name='_username' id='username' value="{{ last_username }}"/>
                        <label for='email' class="left-align">Gebruikersnaam</label>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='password' name='_password' id='password' />
                        <label for='password' class="left-align">Oud wachtwoord</label>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='password' name='_password' id='password' />
                        <label for='password' class="left-align">Nieuw wachtwoord</label>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='password' name='_password' id='password' />
                        <label for='password' class="left-align">Herhaal wachtwoord</label>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                </div>

                <br />
                <center>
                    <div class='row'>
                        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Login</button>
                    </div>
                </center>
            </form>
        </div>
    </div>
{% endblock %}